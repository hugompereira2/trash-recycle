generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  userType_id   String
  address_id    String?
  cnpj_cpf      String
  email         String   @unique
  phone         String
  password_hash String
  created_at    DateTime

  userType            UserType           @relation(fields: [userType_id], references: [id])
  address             Address?           @relation(fields: [address_id], references: [id])
  materialUser        MaterialUser[]
  solicitationClient  SolicitationUser[] @relation("ClientUser")
  SolicitationCompany SolicitationUser[] @relation("CompanyUser")

  @@unique([address_id, email])
  @@map("users")
}

model SolicitationUser {
  id              String   @id @default(uuid())
  client_user_id  String
  company_user_id String
  active          Boolean? @default(dbgenerated())
  finalized       Boolean? @default(false)
  created_at      DateTime @default(now())

  client  User @relation("ClientUser", fields: [client_user_id], references: [id])
  company User @relation("CompanyUser", fields: [company_user_id], references: [id])

  solicitationMaterial SolicitationMaterial[]

  @@map("solicitationUser")
}

model SolicitationMaterial {
  id              String @id @default(uuid())
  solicitation_id String
  material_id     String

  solicitationMaterial_user     SolicitationUser @relation(fields: [solicitation_id], references: [id])
  solicitationMaterial_material Material         @relation(fields: [material_id], references: [id])

  @@map("solicitationMaterial")
}

model UserType {
  id   String @id @default(uuid())
  name String

  userTypes_user User[]

  @@map("userTypes")
}

model Address {
  id            String  @id @default(uuid())
  cep           String
  city          String
  state         String
  district      String
  street        String
  location      String
  street_number String?

  address_user User[]

  @@map("addresses")
}

model MaterialUser {
  id          String @id @default(uuid())
  user_id     String
  material_id String

  User     User     @relation(fields: [user_id], references: [id])
  Material Material @relation(fields: [material_id], references: [id])

  @@map("materialsUser")
}

model Material {
  id    String @id @default(uuid())
  name  String @unique
  color String

  materialUser         MaterialUser[]
  solicitationMaterial SolicitationMaterial[]

  @@map("materials")
}
